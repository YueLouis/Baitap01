<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/avatar"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nguyễn Trọng Tín"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtMssv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="MSSV 23162102"
            android:textSize="14sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lớp 23162B"
            android:textSize="14sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtFaculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoa CNTT"
            android:textSize="14sp"
            android:textAlignment="center" />

        <!-- ===== BÀI 4: NHẬP MẢNG SỐ RỒI IN CHẴN/LẺ LÊN LOGCAT ===== -->
        <EditText
            android:id="@+id/edtNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Nhập mảng số (vd: 1, 2, 3 4 5)"
            android:inputType="text" />

        <Button
            android:id="@+id/btnTestArray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Bài 4: In chẵn/lẻ lên Logcat" />

        <!-- ===== BÀI 5: XỬ LÝ CHUỖI ===== -->
        <EditText
            android:id="@+id/edtInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Nhập chuỗi (vd: I LOVE YOU)" />

        <Button
            android:id="@+id/btnProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Bài 5: Xử lý chuỗi" />

        <TextView
            android:id="@+id/txtEcho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chuỗi đã nhập sẽ hiện ở đây" />
    </LinearLayout>
</ScrollView>
